<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl">


    <ImageView
        android:id="@+id/backgroundImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/woodenplank"
        android:contentDescription="@string/background" />

    <TextView
        android:id="@+id/displayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="kalaha"
        android:textSize="32sp" />

    <com.example.absol.myapplication.Hole
        android:id="@+id/playerOneNest"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/hole2" />

    <com.example.absol.myapplication.Hole
        android:id="@+id/playerTwoNest"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/hole2"/>

    <LinearLayout android:id="@+id/playerOneSide"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <com.example.absol.myapplication.Hole
            android:onClick="test"
            android:id="@+id/playerOneHole6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/six"/>

        <com.example.absol.myapplication.Hole
            android:onClick="test"
            android:id="@+id/playerOneHole5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/six"/>

        <com.example.absol.myapplication.Hole
            android:onClick="test"
            android:id="@+id/playerOneHole4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/six"/>

        <com.example.absol.myapplication.Hole
            android:onClick="test"
            android:id="@+id/playerOneHole3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/six"/>

        <com.example.absol.myapplication.Hole
            android:onClick="test"
            android:id="@+id/playerOneHole2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/six"/>

        <com.example.absol.myapplication.Hole
            android:onClick="test"
            android:id="@+id/playerOneHole1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/six"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/playerTwoSide"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <com.example.absol.myapplication.Hole
            android:onClick="test2"
            android:id="@+id/playerTwoHole1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/six"/>

        <com.example.absol.myapplication.Hole
            android:onClick="test2"
            android:id="@+id/playerTwoHole2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/six"/>

        <com.example.absol.myapplication.Hole
            android:onClick="test2"
            android:id="@+id/playerTwoHole3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/six"/>

        <com.example.absol.myapplication.Hole
            android:onClick="test2"
            android:id="@+id/playerTwoHole4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/six"/>

        <com.example.absol.myapplication.Hole
            android:onClick="test2"
            android:id="@+id/playerTwoHole5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/six"/>

        <com.example.absol.myapplication.Hole
            android:onClick="test2"
            android:id="@+id/playerTwoHole6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/six"/>
    </LinearLayout>


</RelativeLayout>